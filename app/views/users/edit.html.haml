- content_for :title do
	Settings

- form_for @user do |form|
	%div#settings-profile
	%h1 Profile
	%p.field
		= form.label :login, label_with_errors(@user, 'login', 'Username')
		= form.text_field :login
	%p.field
		= form.label :name, label_with_errors(@user, 'name', 'Full Name')
		= form.text_field :name
	%p.field
		= form.label :email, label_with_errors(@user, 'email', 'Email')
		= form.text_field :email
	%p.field
		= label_tag :old_password, label_with_errors(@user, 'old_password', 'Old Password')
		= password_field_tag :old_password
	%p.field
		= label_tag :new_password, label_with_errors(@user, 'new_password', 'New Password')
		= password_field_tag :new_password

	%div#settings-privacy
		%h1 Privacy
		%p.field Privacy
		%p.field Privacy
		%p.field Privacy
		%p.field Privacy
		%p.field Privacy
		%p.field Privacy

	%div.clear

	%p.submit= form.submit 'Save'
