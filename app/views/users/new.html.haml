- content_for :title do
	Sign up

- content_for :javascript do
	= javascript_include_tag 'lib/jquery', 'form-buttons'

- @user.password = nil

%h1 Sign up to listen in
%p{:style => 'text-align: center'} Soundwalks is a free social network for sharing and experiencing soundscapes through field recordings. Soundwalks is currently in private beta, so you need a secret phrase to sign up for an account.

- if flash[:notice]
	%p.notice= flash[:notice]

-if flash[:error]
	%p.error= flash[:error]
	
- form_for :user, :url => users_path do |f|
	%div
		= f.label :name, label_with_errors(@user, 'name', 'Full name'), :class => 'field'
		= f.text_field :name, :class => 'field'
	
	%div
		= f.label :login, label_with_errors(@user, 'login', 'Username'), :class => 'field'
		= f.text_field :login, :class => 'field'

	%div
		= f.label :email, label_with_errors(@user, 'email', 'Email'), :class => 'field'
		= f.text_field :email, :class => 'field'

	%div
		= f.label :password, label_with_errors(@user, 'password', 'Password'), :class => 'field'
		= f.password_field :password, :class => 'field'
	
	%div
		= f.label :secret, label_with_errors(@user, 'secret', 'Secret'), :class => 'field'
		= f.text_field :secret, :class => 'field'
	
	%div.submit
		= submit_tag 'Sign up', :class => 'button'

