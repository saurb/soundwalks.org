<h1>Sign up to listen in</h1>
<% @user.password = nil %>

<% form_for :user, :url => users_path do |f| -%>
	<p class='field'>
		<%= f.label :name, label_with_errors(@user, 'name', 'Full name') %>
		<%= f.text_field :name %>
	</p>
	
	<p class='field'>
		<%= f.label :login, label_with_errors(@user, 'login', 'Username') %>
		<%= f.text_field :login %>
	</p>

	<p class='field'>
		<%= f.label :email, label_with_errors(@user, 'email', 'Email') %>
		<%= f.text_field :email %>
	</p>

	<p class='field'>
		<%= f.label :password, label_with_errors(@user, 'password', 'Password') %>
		<%= f.password_field :password %>
	</p>

	<p class='submit'>
		<%= submit_tag 'Sign up' %>
	</p>
<% end -%>
