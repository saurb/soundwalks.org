- content_for :title do
	People #{@user.name} is following

- content_for :javascript do
	= javascript_include_tag 'lib/jquery'
	
= render :partial => 'user_profile', :locals => {:user => @user}

- if @user.friendships.size > 0
	%h2 #{first_name @user, {:capitalize => true}} #{first_name_verb @user} following #{pluralize(@user.friendships.size, 'person')}.
	= render :partial => 'user_list', :locals => {:user => @user, :users => @user.friends}
- else
	%h2 #{first_name @user, {:capitalize => true}} #{first_name_verb_negative @user} following anyone.
