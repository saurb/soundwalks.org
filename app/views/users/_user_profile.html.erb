<% 
	title = user.name
	menu = [
		['Soundwalks', user_name_path(user), {}], 
		["#{user.friends.size} Following", user_following_path(user), {}], 
		[pluralize(user.inverse_friends.size, 'Follower'), user_followers_path(user), {}], 
	]
%>

<%= render :partial => 'shared/profile', :locals => {:title => title, :user => user, :menu => menu} %>
