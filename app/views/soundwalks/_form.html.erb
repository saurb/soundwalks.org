<% form_for(@soundwalk, :html => {:multipart => true}) do |form| %>
	<p class='field'>
		<%= label_tag 'GPS file', label_with_errors(@soundwalk, 'upload', 'GPS file') %>
		<label class='file_wrapper'>
			(Click to upload file.)
			<%= file_field :upload, :locations_file, :class => 'file' %>
		</label>
	</p>
	<p class='field'>
		<%= form.label :title, label_with_errors(@soundwalk, 'title', 'Title') %>
		<%= form.text_field :title %>
	<p>
	<p class='field'>
		<%= form.label :description, label_with_errors(@soundwalk, 'description', 'Description') %>
		<%= form.text_area :description %>
	</p>
	<p class='submit'>
		<%= form.submit 'Save' %>
	</p>
<% end %>

<script type='text/javascript'>
	SI.Files.stylizeAll();
</script>