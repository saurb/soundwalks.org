- content_for :javascript do
	= javascript_include_tag 'lib/jquery', 'form-buttons', 'stylize-file'
	
- form_for(@soundwalk, :html => {:multipart => true}) do |form|
	%div
		= form.label :uploaded_data, label_with_errors(@soundwalk, 'uploaded_data', 'GPS file'), :class => 'filefield'
		%div.fileinput= form.file_field :uploaded_data, :class => 'file'
		
	%div
		= form.label :title, label_with_errors(@soundwalk, 'title', 'Title'), :class => 'field'
		= form.text_field :title, :class => 'field'
		
	%div
		= form.label :description, label_with_errors(@soundwalk, 'descriptiaon', 'Description'), :class => 'field'
		= form.text_area :description, :class => 'field'
		
	%div.field-nontext
		= form.label :privacy, label_with_errors(@soundwalk, 'privacy', 'Privacy'), :class => 'field-nontext'
		#{form.radio_button(:privacy, :private)} Private
		#{form.radio_button(:privacy, :friends)} Friends-only
		#{form.radio_button(:privacy, :public)} Public
		
	%p.submit
		- if defined? new_soundwalk
			%button{:type => 'submit', :name => 'continue'} Add sounds
			%button{:type => 'submit', :name => 'submit'} Finish
		- else
			%button{:type => 'submit', :name => 'submit'} Save
			