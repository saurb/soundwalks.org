- if (defined? edit_title) && logged_in? && (current_user.id == soundwalk.user.id)
	- title = "<h1 style='display: inline'>#{link_to(h(soundwalk.title), soundwalk)} - </h1><h1 style='display: inline' class='editable' data-shows='title' data-edits='title' data-value='#{h sound.title}' data-object='sound' data-url='#{soundwalk_sound_path(soundwalk, sound)}'>#{h sound.title}</h1>"
	- title_menu = [['Previous sound', soundwalk_sound_path(soundwalk, soundwalk.sounds[previous_index])], ['Next sound', soundwalk_sound_path(soundwalk, soundwalk.sounds[next_index])],['Edit sound', edit_soundwalk_sound_path(soundwalk, sound), {}], ['Delete sound', soundwalk_sound_path(soundwalk, sound), {:method => :delete}]]
	- title_text = "by #{link_to soundwalk.user.name, soundwalk.user}"
	= render :partial => 'shared/profile', :locals => {:title => title, :title_text => title_text, :title_menu => title_menu, :user => soundwalk.user, :title_markup => true}
- else
	- title = "<h1>#{link_to(h(soundwalk.title), soundwalk)} - #{link_to(h(sound.title), soundwalk_sound_path(soundwalk, sound))}</h1>"
	- title_text = "by #{link_to soundwalk.user.name, soundwalk.user}"
	- title_menu = ['Previous sound', soundwalk_sound_path(soundwalk, soundwalk.sounds[previous_index])], ['Next sound', soundwalk_sound_path(soundwalk, soundwalk.sounds[next_index])]
	= render :partial => 'shared/profile', :locals => {:title => title, :title_text => title_text, :title_menu => title_menu, :user => soundwalk.user, :title_markup => true}
	