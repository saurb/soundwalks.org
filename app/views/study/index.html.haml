- form_for(:contact, :url => contact_path) do |form|
	%p
		= form.label :subject
		%br
		= form.text_field :subject
	
	%p
		= form.label :name
		= form.text_field :name
		
	%p
		= form.label :email
		= form.text_field :email
	
	%p
		= form.label :body
		= form.text_area :body
		
	%p
		= form.submit "Send"
